@model MVCDHProject5.Models.ChangePasswordModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-white p-3 rounded shadow-lg" style="background-color: #002855;">
            Forgot Password
        </h1>
    </div>

    <div class="card mx-auto shadow-lg p-4 mt-4" style="max-width: 500px; background-color: #f8f9fa; border-radius: 10px;">
        <p class="lead text-center">Enter your username to reset your password. A reset link will be sent to your registered email.</p>
        <hr />

        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"><i class="fas fa-user"></i> Username</label>
                <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter your username" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary rounded-pill fw-bold">
                    <i class="fas fa-paper-plane"></i> Send Reset Link
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">