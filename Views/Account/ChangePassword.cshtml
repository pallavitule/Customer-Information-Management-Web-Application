@model MVCDHProject5.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    var UserId = Context.Request.Query["UserId"];
    var Token = Context.Request.Query["Token"];
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-white p-3 rounded shadow-lg" style="background-color: #002855;">
            Reset Password
        </h1>
    </div>

    <div class="card mx-auto shadow-lg p-4 mt-4" style="max-width: 500px; background-color: #f8f9fa; border-radius: 10px;">
        <p class="lead text-center">Enter your new password below to reset your account access.</p>
        <hr />

        <form asp-action="ResetPassword" asp-route-userId="@UserId" asp-route-token="@Token">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"><i class="fas fa-lock"></i> New Password</label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter new password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-bold"><i class="fas fa-lock"></i> Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Confirm new password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success rounded-pill fw-bold">
                    <i class="fas fa-key"></i> Reset Password
                </button>
            </div>
        </form>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">