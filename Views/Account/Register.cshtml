  @model MVCDHProject5.Models.UserViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%;">
        <div class="card-body">
            <h2 class="text-center text-primary mb-3"><i class="fas fa-user-plus"></i> Register</h2>
            <hr />

            <form asp-action="Register">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"><i class="fas fa-user"></i> Name</label>
                    <input asp-for="Name" class="form-control rounded-pill" placeholder="Enter your full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"><i class="fas fa-envelope"></i> Email</label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Mobile" class="form-label fw-bold"><i class="fas fa-phone"></i> Mobile</label>
                    <input asp-for="Mobile" class="form-control rounded-pill" placeholder="Enter your mobile number" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"><i class="fas fa-lock"></i> Password</label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter a strong password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label fw-bold"><i class="fas fa-check-circle"></i> Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Re-enter your password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded-pill fw-bold">
                        <i class="fas fa-user-check"></i> Register
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                        <i class="fas fa-arrow-left"></i> Back to Home
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

