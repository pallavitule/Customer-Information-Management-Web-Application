

 

                           @model IEnumerable<Customer>

<div class="container mt-4">
    <h2 class="text-center text-white p-3 rounded shadow-lg" style="background-color: #002855;">Customer Information Management - Customer Details</h2>

    <div class="table-responsive">
        <table class="table table-bordered text-center align-middle" style="background-color: #f8f9fa;">
            <thead style="background-color: #007bff; color: white;">
                <tr>
                    <th>@Html.DisplayNameFor(C => C.Custid)</th>
                    <th>@Html.DisplayNameFor(C => C.Name)</th>
                    <th>@Html.DisplayNameFor(C => C.Balance)</th>
                    <th>@Html.DisplayNameFor(C => C.City)</th>
                    <th>@Html.DisplayNameFor(C => C.Status)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(C => customer.Custid)</td>
                        <td>@Html.DisplayFor(C => customer.Name)</td>
                        <td>@Html.DisplayFor(C => customer.Balance)</td>
                        <td>@Html.DisplayFor(C => customer.City)</td>
                        <td>@Html.DisplayFor(C => customer.Status)</td>
                        <td>
                            <a asp-action="DisplayCustomer" asp-route-Custid="@customer.Custid" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="EditCustomer" asp-route-Custid="@customer.Custid" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="DeleteCustomer" asp-route-Custid="@customer.Custid"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this record?')">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <a asp-action="AddCustomer" class="btn btn-success btn-lg">
            <i class="fas fa-user-plus"></i> Add New Customer
        </a>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
